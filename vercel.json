{
  "functions": {
    "api/index.mjs": {
      "includeFiles": "**/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/db/:collection/:method",
      "destination": "/api/db.mjs"
    },
    {
      "source": "/api/page/:page",
      "destination": "/api/page.mjs"
    },
    {
      "source": "(.*)",
      "destination": "/api/index.mjs"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=1, stale-while-revalidate=59"
        }
      ]
    }
  ],
  "trailingSlash": false,
  "github": {
    "silent": true
  }
}
